{
  "compilerOptions": {
    "target": "es5",
    "outDir": "build",
    "rootDir": "./",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "es2015.iterable", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "types": [ "node" ]
  }
}
